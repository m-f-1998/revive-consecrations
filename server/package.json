{
  "name": "revive-consecrations-server",
  "version": "1.0.0",
  "description": "Server for Revive Consecrations",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "prestart": "npm i",
    "start": "node --env-file=.env --watch ./ index.js",
    "dev": "npm run prestart && npx --yes nodemon -e ts --exec \"tsc && node ./dist/index.js\"",
    "lint": "npx --yes eslint",
    "lint:fix": "npx --yes eslint --fix",
    "tsc-verify": "npx --yes tsc --noEmit"
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "sanitize-html": "^2.17.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/helmet": "^0.0.48",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "@types/sanitize-html": "^2.16.0",
    "eslint-plugin-import": "^2.32.0",
    "typescript-eslint": "^8.49.0"
  }
}
